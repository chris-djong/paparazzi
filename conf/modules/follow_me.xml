
<!DOCTYPE module SYSTEM "module.dtd">

<module name="follow_me" dir="ctrl">
  <doc>
    <description>
      Follow a ground based object which is transmitting the GROUND_GPS datalink message.
      This can be done using gpsd2ivy.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="FollowMe">
        <dl_setting var="follow_me_distance" min="0" max="100" step="1" shortname="Distance" unit="m"/>
        <dl_setting var="follow_me_heading" min="0." max="360." step="1.0" shortname="Heading"/>
        <dl_setting var="follow_me_height" min="5" max="50" step="1" shortname="Height"/>
        <dl_setting var="x_diff" min="-30" max="30" step="1" shortname="Lateral offset"/>
        <dl_setting var="ground_speed_diff_pgain" min="0" max="0.6" step="0.01" shortname="Speed pgain"/>
        <dl_setting var="ground_speed_diff_igain" min="0" max="0.06" step="0.01" shortname="Speed igain"/>
        <dl_setting var="ground_speed_diff_dgain" min="0" max="0.3" step="0.01" shortname="Speed dgain"/>
        <dl_setting var="roll_diff_pgain" min="0" max="0.012" step="0.0001" shortname="Roll pgain"/>
        <dl_setting var="roll_diff_igain" min="0" max="0.0001" step="0.00001" shortname="Roll igain"/>
        <dl_setting var="roll_diff_dgain" min="0" max="0.012" step="0.0001" shortname="Roll dgain"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="follow_me.h"/>
  </header>
  <init fun="follow_me_init()"/>
  <datalink message="GROUND_GPS" fun="follow_me_parse_ground_gps(buf)"/>
  <makefile>
    <file name="follow_me.c"/>
  </makefile>
</module>

