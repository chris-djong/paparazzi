
<!DOCTYPE module SYSTEM "module.dtd">

<module name="follow_me" dir="ctrl">
  <doc>
    <description>
      Follow a ground based object which is transmitting the GROUND_GPS datalink message.
      This can be done using gpsd2ivy.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="FollowMe">
        <dl_setting var="follow_me_distance" min="-255" max="255" step="1" shortname="Follow distance" unit="m"/>
        <dl_setting var="follow_me_distance_2" min="0" max="255" step="1" shortname="Follow 2 distance" unit="m"/>
        <dl_setting var="stdby_distance" min="-255" max="255" step="1" shortname="Stdby distance" unit="m"/>
        <dl_setting var="follow_me_heading" min="0." max="360." step="1.0" shortname="Heading"/>
        <dl_setting var="follow_me_height" min="-200" max="200" step="1" shortname="Height"/>
        <dl_setting var="follow_me_region" min="10" max="1000" step="1" shortname="Fly Region"/>
        <dl_setting var="lateral_offset" min="-128" max="127" step="1" shortname="Lateral offset"/>
        <!-- <dl_setting var="roll_enable" min="0" max="255" step="0.5" shortname="Roll enable"/>
        <dl_setting var="roll_disable" min="0" max="255" step="0.5" shortname="Roll disable"/> -->
        <dl_setting var="average_speed_size" min="1" max="100" step="1" shortname="Average speed length"/> 
        <dl_setting var="airspeed_pgain" min="-10" max="10" step="0.01" shortname="Speed pgain"/>
        <dl_setting var="airspeed_igain" min="-10" max="10" step="0.001" shortname="Speed igain"/>
        <dl_setting var="airspeed_dgain" min="-10" max="10" step="0.001" shortname="Speed dgain"/>
        <!-- <dl_setting var="roll_diff_pgain" min="0" max="0.012" step="0.0001" shortname="Roll pgain"/>
        <dl_setting var="roll_diff_igain" min="0" max="0.001" step="0.0001" shortname="Roll igain"/>
        <dl_setting var="roll_diff_dgain" min="0" max="0.22" step="0.01" shortname="Roll dgain"/> -->
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="follow_me.h"/>
  </header>
  <init fun="follow_me_init()"/>
  <datalink message="GROUND_GPS" fun="follow_me_parse_ground_gps(buf)"/>
  <makefile>
    <file name="follow_me.c"/>
  </makefile>
</module>

