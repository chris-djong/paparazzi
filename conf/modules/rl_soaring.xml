<!DOCTYPE module SYSTEM "module.dtd">

<module name="rl_soaring">
  <doc>
    <description>Soaring method using RL</description>
  </doc> 
  <settings>
    <dl_settings>
      <dl_settings name="ReinLearn">
        <dl_setting var="rl_exploration_rate" min="0" max="1" step="0.1" shortname="Exploration Rate" unit="m"/>
        <dl_setting var="average_distance_size" min="0" max="100" step="1" shortname="Average Dist Size"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="rl_soaring.h"/>
  </header>
  <init fun="rl_soaring_init()"/>
  <!-- <datalink message="RL_TRAINING_UP" fun="rl_soaring_parse_uplink()"/> -->
  <makefile>
    <file name="rl_soaring.c"/>
  </makefile>
</module>

