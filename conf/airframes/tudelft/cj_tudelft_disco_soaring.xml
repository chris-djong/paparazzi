<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!--
     Parrot Disco
-->

<airframe name="Disco">
  <firmware name="fixedwing">  
   <!-- Define default radius for oval eight and stdby -->
   <module name="follow_me"/> 
   <module name="rl_soaring"/>
   
    <!-- ************************************************
               AUTOPILOT TARGET 
    ************************************************  -->
   
    <target name="ap" board="disco">    
      <module name="radio_control" type="sbus"/>
      <module name="airspeed" type="ms45xx_i2c">        
        <!-- Pressured offset  -->
        <!-- <define name="MS45XX_PRESSURE_SCALE" value="1.05" /> This is done internally using a formula in airspeed_ms45xx_i2c.c -->
        <!-- <define name="MS45XX_PRESSURE_OFFSET" value="8549.0"/>  <!-- 8542.0--> 
        
        <!--Gives cut-off freq of 1/(2*pi*tau) in 1Hz -->
        <define name="MS45XX_LOWPASS_TAU" value="0.25"/> <!-- Tweak the filter -->
        
        <!-- Pressure range, defined by datasheet -->
        <!--  This also defined the PRESSURE_SCALE -->
      </module>
      
      <module name="logger_file">
        <define name="FILE_LOGGER_PATH" value="/data/ftp/internal_000/log"/>
      </module>

      <!-- Type of telemetry -->
      <module name="telemetry" type="transparent_udp"/> 
      <!-- <module name="telemetry" type="transparent">
          <configure name="MODEM_PORT" value="UART2"/>
          <configure name="MODEM_BAUD" value="B57600"/>
      </module> -->
            
      <!-- Option 1 EKF2 -->
      <module name="ins" type="alt_float"/> 
      
      <define name="DISCO_GYRO_RANGE" value="MPU60X0_GYRO_RANGE_1000"/>
      <define name="DISCO_ACCEL_RANGE" value="MPU60X0_ACCEL_RANGE_16G"/><!-- Set to 8G maybe possible -->
      <define name="DISCO_LOWPASS_FILTER" value="MPU60X0_DLPF_256HZ"/>
      <define name="DISCO_SMPLRT_DIV" value="3"/><!-- Do not change randomly ;) -->
      
      <!-- <configure name="NAVIGATION_FREQUENCY" value="16"/> <!--  unit="Hz" --> 
      <!-- <configure name="CONTROL_FREQUENCY" value="120"/> <!--  unit="Hz" --> <!-- default 120 -->
      <!--<configure name="TELEMETRY_FREQUENCY" value="60"/> <!--  unit="Hz" --> <!-- default 120 -->
      <!--<configure name="MODULES_FREQUENCY" value="512"/> <!--  unit="Hz" --> <!-- default 120 -->
      
      <!-- Periodic frequency of default modules -->
      <configure name="PERIODIC_FREQUENCY" value="512"/>
    </target>
    
    <!-- ************************************************
              SIMULATION TARGET 
    ************************************************  -->
    
    <target name="sim" board="pc">
      <module name="telemetry" type="transparent_udp"/> 
      <module name="radio_control" type="ppm"/>
      <define name="AIRSPEED_ADC_SCALE" value="1"/>
      <define name="AIRSPEED_ADC_BIAS" value="1"/>
      <module name="airspeed" type="adc"/>
      <module name="ins" type="alt_float"/>
    </target>
    
    <!-- ************************************************
               ALL TARGETS
    ************************************************  -->
        
    <!-- Airspeed definitions  -->
    <define name="USE_AIRSPEED" value="1"/>
    <define name="STALL_AIRSPEED" value="8"/>
    
    <module name="air_data"/>
    
    <module name="sys_mon"/><!-- Enable if one want to check processor load for higher loop, nav, module etc. frequencies -->
    
    <define name="USE_MAGNETOMETER_ONGROUND" value="FALSE"/> <!--DEFINE only used if float_dcm Use magnetic compensation before takeoff only while GPS course not good -->
    <!-- If AHRS_MAG_CORRECT_FREQUENCY is set outside of target no need USE_MAGNETOMETER it is assumed TRUE -->
    <configure name="USE_MAGNETOMETER" value="FALSE"/> <!-- Make sure is callibrated if set to TRUE -->    
    <!--  Vehicle -->
    <module name="imu" type="disco"/>
    <module name="ahrs" type="float_dcm">
        <!-- Use Magnetometer for heading -->
        <configure name="USE_MAGNETOMETER" value="FALSE"/>
        <configure name="AHRS_USE_MAGNETOMETER" value="FALSE"/>
        
        <!-- Enable GPS Heading  -->
        <configure name="AHRS_USE_GPS_HEADING" value="TRUE"/>
        <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="2.0" unit="m/s"/>
    </module>
    <module name="actuators" type="disco"/>
    
    
    <!-- Navigation -->    
    <define name="DEBUG_GPS_UBX_UCENTER" value="TRUE"/>
    <!-- <define name="USE_GPS_UBX_RTCM" value="TRUE"/>  <!-- required so that RTCM messages are decoded in /subsystems/gps/gps_ubx.c -->
    <!-- <define name="GPS_UBX_UCENTER_RATE" value="0x00FA"/> <!-- Ucenter rate for RTCM messsage.. In milliseconds. 0x00FA = 250ms = 4Hz-->
    <module name="gps" type="ublox"/>
    <module name="gps" type="ubx_ucenter"/>
    <module name="navigation"/>
    
    <!-- Control Algorithms -->
    <module name="control" type="energy"/> 
  </firmware>


  <!-- ************************************************
               SERVO DEFINITIONS
    ************************************************  -->
  <servos>
    <!--  Trim can be added here by changing the neutral value -->
    <!--  Absolute travel limits can also be changed with the min/max values -->
    <servo name="MOTOR" no="0" min="1000" neutral="1000" max="12500"/>
    <servo name="AILEVON_RIGHT" no="6" min="1880" neutral="1550" max="880"/> <!-- min is downward deflection-->
    <servo name="AILEVON_LEFT" no="1" min="980" neutral="1400" max="1980"/>  <!-- max is upward deflection-->
  </servos>

  <!-- ************************************************
               SERVO COMMANDS
    ************************************************  -->
  <commands>
    <!-- These are the failsafe attitude commands that the aircraft will keep in case no controller is active -->
    <axis name="THROTTLE" failsafe_value="0"/>  
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>
  </commands>

  <!-- ************************************************
               RC COMMANDS
    ************************************************  -->
  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
  </rc_commands>

  <!-- ************************************************
               SERVO MIXER
    ************************************************  -->
  <section name="MIXER">
    <define name="AILEVON_AILERON_RATE" value="0.75"/>
    <define name="AILEVON_ELEVATOR_RATE" value="0.75"/>
  </section>

  <!-- ************************************************
               COMMAND TUNING
    ************************************************  -->
  <command_laws>
    <let var="th_hold" value="LessThan(@THROTTLE, RadioControlValues(RADIO_THROTTLE))"/> <!-- Radio throttle is used in case it is lower than the throttle desired by the autopilot  --> 
    <set servo="MOTOR" value="($th_hold? @THROTTLE : RadioControlValues(RADIO_THROTTLE))"/>
    <let var="aileron" value="@ROLL  * AILEVON_AILERON_RATE"/>
    <let var="elevator" value="@PITCH * AILEVON_ELEVATOR_RATE"/>
    <set servo="AILEVON_LEFT" value="$elevator - $aileron"/>
    <set servo="AILEVON_RIGHT" value="$elevator + $aileron"/>
  </command_laws>

