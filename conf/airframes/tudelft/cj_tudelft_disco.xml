<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!--
     Parrot Disco
-->

<airframe name="Disco">
  <firmware name="fixedwing">  
   <!-- Define default radius for oval eight and stdby -->
   <module name="follow_me"/> 
    
   
    <!-- ************************************************
               AUTOPILOT TARGET 
    ************************************************  -->
   
    <target name="ap" board="disco">    
      <module name="radio_control" type="sbus"/>
      <define name="RC_LOST_MODE" value="AP_MODE_AUTO2"/>
      <module name="airspeed" type="ms45xx_i2c">
        <define name="MS45XX_I2C_DEV" value="i2c1"/>
        <define name="MS45XX_PRESSURE_RANVE" value="0.05"/>
      </module>
      <module name="logger_file">
        <define name="FILE_LOGGER_PATH" value="/data/ftp/internal_000/log"/>
      </module>
      
      <!-- Option 1 EKF2 -->
      <define name="NO_HEADING"/> <!--  This define is used so that the heading will not be updated by the EKF2 (due to rotorcraft <-> fw issues) -->
      <module name="ins" type="ekf2"/>
      
      <!--  Option 2 alt_float 2 state Kalman filter for vertical position and vertical velocity from GPS and baro
      <module name="ins" type="alt_float"/> -->
    </target>
    
    <!-- ************************************************
              SIMULATION TARGET 
    ************************************************  -->
    
    <target name="sim" board="pc">
      <module name="radio_control" type="ppm"/>
      <define name="AIRSPEED_ADC_SCALE" value="1"/>
      <define name="AIRSPEED_ADC_BIAS" value="1"/>
      <module name="airspeed" type="adc"/>
      <module name="ins" type="alt_float"/>
    </target>
    
    <!-- ************************************************
               ALL TARGETS
    ************************************************  -->
    <!-- Personal modules -->
    <!-- <module name="rl_soaring"/> -->
        
    <!-- Airspeed definitions  -->
    <define name="USE_AIRSPEED" value="1"/>
    <define name="STALL_AIRSPEED" value="8"/>
    <module name="air_data"/>
    
    <define name="USE_MAGNETOMETER_ONGROUND" value="TRUE"/> <!--DEFINE only used if float_dcm Use magnetic compensation before takeoff only while GPS course not good -->
    <!-- If AHRS_MAG_CORRECT_FREQUENCY is set outside of target no need USE_MAGNETOMETER it is assumed TRUE -->
    <configure name="USE_MAGNETOMETER" value="TRUE"/> <!-- Make sure is callibrated if set to TRUE -->
    
    
    
    <!-- Periodic frequency of default modules -->
    <configure name="PERIODIC_FREQUENCY" value="120"/>
        
    <!--  Vehicle -->
    <module name="imu" type="disco"/>
    <module name="ahrs" type="float_dcm">
        <configure name="USE_MAGNETOMETER" value="TRUE"/>
        <configure name="AHRS_USE_MAGNETOMETER" value="TRUE"/>
        <!-- <define name="AHRS_MAG_UPDATE_ALL_AXES" value="FALSE"/> -->
        <!-- <define name="AHRS_GPS_SPEED_IN_NEGATIVE_Z_DIRECTION" value="FALSE"/>-->
        <!-- <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="2.0" unit="m/s"/>-->
        <!--<define name="AHRS_GRAVITY_HEURISTIC_FACTOR" value="20"/>--> <!-- Set to 0 if IMU runs away -->
        <!-- <define name="AHRS_ICQ_IMU_ID" value="ABI_BROADCAST"/>--> <!--ABI sender id of IMU to use-->
        <!-- <define name="AHRS_ICQ_MAG_ID" value="MAG_CALIB_UKF_ID" /> --> <!--for when using the mag_calib_ukf-->
    </module>
    <module name="actuators" type="disco"/>
    
    
    <!-- Navigation -->    
    <define name="USE_GPS_UBX_RTCM" value="TRUE"/>
    <module name="gps" type="ublox"/>
    <module name="gps" type="ubx_ucenter"/>
    <module name="navigation"/>
    
    <!-- Type of telemetry -->
    <module name="telemetry" type="transparent_udp"/> 
   <!--  <module name="telemetry" type="transparent">
        <configure name="MODEM_PORT" value="UART2"/>
        <configure name="MODEM_BAUD" value="B57600"/>
    </module>
    -->
    <!-- Control Algorithms -->
    <module name="control" type="new"/> 
  </firmware>


  <!-- ************************************************
               SERVO DEFINITIONS
    ************************************************  -->
  <servos>
    <servo name="MOTOR" no="0" min="1000" neutral="1000" max="12500"/>
    <servo name="AILEVON_RIGHT" no="6" min="1900" neutral="1450" max="1000"/> <!-- min is downward deflection-->
    <servo name="AILEVON_LEFT" no="1" min="1000" neutral="1400" max="1900"/>  <!-- max is upward deflection-->
  </servos>

  <!-- ************************************************
               SERVO COMMANDS
    ************************************************  -->
  <commands>
    <axis name="THROTTLE" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>
  </commands>

  <!-- ************************************************
               RC COMMANDS
    ************************************************  -->
  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
  </rc_commands>

  <!-- ************************************************
               SERVO MIXER
    ************************************************  -->
  <section name="MIXER">
    <define name="AILEVON_AILERON_RATE" value="0.75"/>
    <define name="AILEVON_ELEVATOR_RATE" value="0.75"/>
  </section>

  <!-- ************************************************
               COMMAND TUNING
    ************************************************  -->
  <command_laws>
    <let var="th_hold" value="LessThan(@THROTTLE, RadioControlValues(RADIO_THROTTLE))"/> <!-- Radio throttle is used in case it is lower than the throttle desired by the autopilot  --> 
    <set servo="MOTOR" value="($th_hold? @THROTTLE : RadioControlValues(RADIO_THROTTLE))"/>
    <let var="aileron" value="@ROLL  * AILEVON_AILERON_RATE"/>
    <let var="elevator" value="@PITCH * AILEVON_ELEVATOR_RATE"/>
    <set servo="AILEVON_LEFT" value="$elevator - $aileron"/>
    <set servo="AILEVON_RIGHT" value="$elevator + $aileron"/>
  </command_laws>

