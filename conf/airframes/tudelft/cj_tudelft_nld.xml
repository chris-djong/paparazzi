<!DOCTYPE airframe SYSTEM "../airframe.dtd">
<airframe name="Never_Landing_Drone">
  <description>
    NeverLandingDrone
  </description>
  <firmware name="fixedwing">
  
    <!-- ************************************************
               AUTOPILOT TARGET 
    ************************************************  -->    
    
    <target name="ap" board="lisa_mxs_1.0">

      <!-- Set Flash Mode -->
      <define name="LOW_NOISE_TIME" value="10"/>
      <configure name="FLASH_MODE" value="SWD_NOPWR"/> <!-- For flashing with black magic prove v2.0 or newer -->

      <!-- Set frequencies -->
      <configure name="PERIODIC_FREQUENCY" value="512"/> <!--  unit="Hz" -->
      <configure name="AHRS_PROPAGATE_FREQUENCY" value="500"/><!--  unit="Hz" -->
      <configure name="AHRS_CORRECT_FREQUENCY" value="500"/> <!--  unit="Hz" -->
      <configure name="AHRS_MAG_CORRECT_FREQUENCY" value="50"/><!-- TODO: best value unit="Hz" -->
      <configure name="NAVIGATION_FREQUENCY" value="16"/> <!--  unit="Hz" -->
      <configure name="CONTROL_FREQUENCY" value="120"/> <!--  unit="Hz" -->
      <configure name="TELEMETRY_FREQUENCY" value="60"/> <!--  unit="Hz" -->
      <configure name="MODULES_FREQUENCY" value="512"/> <!--  unit="Hz" -->

      <!-- Enable airspeed sensor -->
      <module name="airspeed" type="ms45xx_i2c">
        <!--Gives cut-off freq of 1/(2*pi*tau) in 1Hz -->
        <define name="MS45XX_LOWPASS_TAU" value="0.25"/> <!-- TODO: find optimum value for stock Disco -->
      </module>
      
      <!-- ToDo specify where to log files (even possible on Lisa MXS?) -->
      <module name="logger_file">
        <define name="FILE_LOGGER_PATH" value="/data/ftp/internal_000/log"/>
      </module>
      
    </target>

    <!-- ************************************************
              SIMULATION TARGET 
    ************************************************  -->
    
    <target name="sim" board="pc">
      <define name="INS_BARO_ID" value="BARO_SIM_SENDER_ID"/>
      <configure name="AHRS_PROPAGATE_FREQUENCY" value="500"/>
      <module name="airspeed" type="adc"/>
      <module name="baro_sim"/>
    </target>

    <!-- ************************************************
               ALL TARGETS
    ************************************************  -->
    
    <!-- MODULES --------------------------------------->
    <!-- Personal -->
    <module name="follow_me"/> 
    <module name="rl_soaring"/>

    <!-- Telemetry -->
    <module name="telemetry" type="transparent">
      <configure name="MODEM_BAUD" value="B115200"/>
      <configure name="MODEM_PORT" value="UART1"/>
    </module>
    
    <!-- GPS -->
    <!-- <module name="gps" type="ublox" -->
    <!-- <module name="gps" type="ubx_ucenter"/> -->
    <module name="gps" type="datalink"/> 
    
    <!-- Adds airdata message -->
    <module name="air_data"/>
    <module name="tune_airspeed"/>
    
    <!-- IMU -->
    <module name="imu" type="lisa_mx_v2.1"/>

    <!-- Actuators -->
    <module name="actuators" type="pwm"/>    
    
    <!-- Control algorithm -->
    <!-- Note for the Disco we used energy, revert if required -->
    <module name="control" type="energyadaptive"/>
    
    <!-- Enable system monitor for CPU load -->
    <module name="sys_mon"/> 
    
    <!-- Control algorithm -->
    <module name="control" type="energyadaptive"/> <!-- or energyadaptive use type="new" to you gusto -->
  
    <!-- Enable navigation module -->
    <module name="navigation"/>
  
    <!-- Enable radio control --> 
    <module name="radio_control" type="ppm">
      <configure name="RADIO_CONTROL_PPM_PIN" value="SERVO6"/>
    </module>
  
    <!-- Chose INS -->
    <module name="ins" type="alt_float"/> 
    
    <!-- Chose AHRS -->
    <!-- Note, for the DISCO we used float_dcm, revert to this if required -->
    <module name="ahrs" type="float_cmpl_quat"> 
      <configure name="AHRS_USE_MAGNETOMETER" value="TRUE"/> 
      <define name="AHRS_USE_GPS_HEADING" value="TRUE"/>
      <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="3.0"/> 
    </module>
    
    <!-- Calibration AHRS automatically in case we have a 3D fix -->
    <module name="geo_mag"/>

    
    
    <!-- CONFIGURATION --------------------------------------->
   
    <!-- Airspeed sensor configuration-->
    <define name="USE_AIRSPEED" value="TRUE"/>
    <define name="STALL_AIRSPEED" value="4"/>

    <!-- Use barometer of flight controller -->
    <configure name="USE_BARO_BOARD" value="TRUE"/>
    
    <!-- TMangetometer calibration -->
    <configure name="USE_MAGNETOMETER" value="0"/>
    <configure name="USE_MAGNETOMETER_ONGROUND" value="0"/>

    <!-- Amount of time it take for the bat to trigger check -->
    <!-- to avoid bat low spike detection when strong pullup withch draws short sudden power-->
    <define name="BAT_CHECKER_DELAY" value="80"/> 
    <!-- Only one main battery so CATASTROPHIC_BATTERY kill should be somewhat delayed -->
    <define name="CATASTROPHIC_BATTERY_KILL_DELAY" value="410"/> 
    <!-- Use magnetometer on ground for initial heading -->
    <define name="USE_MAGNETOMETER_ONGROUND" value="TRUE"/> 
    
  </firmware>
 
  <!-- Set servos locations -->
  <servos driver="PWM">
    <!-- <servo name="MOTOR" no="0" min="1000" neutral="1000" max="12500"/> -->
    <servo name="AILEVON_RIGHT" no="3" min="1900" neutral="1450" max="1000"/>
    <servo name="AILEVON_LEFT" no="4" min="1000" neutral="1450" max="1900"/>
  </servos>
 
  <!-- Set servo commands -->
  <commands>
    <!-- These are the failsafe attitude commands that the aircraft will keep in case GPS is lost for example -->
    <axis name="THROTTLE" failsafe_value="0"/>  
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>       
  </commands>
  
  <!-- Link the servo position to certain commands -->
  <command_laws>
    <!-- <let var="th_hold" value="LessThan(@THROTTLE, RadioControlValues(RADIO_THROTTLE))"/> <!-- Radio throttle is used in case it is lower than the throttle desired by the autopilot  -->  
    <!-- <set servo="MOTOR" value="($th_hold? @THROTTLE : RadioControlValues(RADIO_THROTTLE))"/> -->
    <let var="aileron" value="@ROLL  * AILEVON_AILERON_RATE"/>
    <let var="elevator" value="@PITCH * AILEVON_ELEVATOR_RATE"/>
    <set servo="AILEVON_LEFT" value="$elevator - $aileron"/>
    <set servo="AILEVON_RIGHT" value="$elevator + $aileron"/>
  </command_laws> 
 
  <!-- Set RC commands -->
  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
  </rc_commands>
  
  <!--  Aileron elevator mixing -->
  <section name="MIXER">
    <define name="AILEVON_AILERON_RATE" value="0.75"/>
    <define name="AILEVON_ELEVATOR_RATE" value="0.75"/>
  </section>  
  
  <!-- Set AUTO1 limits -->
